@inherits LayoutComponentBase

<PageTitle>Mercadona.Backend</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudText>Mercadona</MudText>
        <MudSpacer/>
        <MudButton Color="Color.Inherit">Se connecter</MudButton>
        <MudMenu AnchorOrigin="Origin.BottomRight" Dense="true">
            <ActivatorContent>
                <MudAvatar>A</MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudText>toto@toto.fr</MudText>
                <MudMenuItem>Se déconnecter</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Catalogue</MudNavLink>
            <MudNavLink Href="/products" Match="NavLinkMatch.Prefix">Produits</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code{
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
